@model Technico.ViewModels.CreateRepairDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>

<h4>Repair</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRepair">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="repairDto.ScheduledRepair" class="control-label"></label>
                <input asp-for="repairDto.ScheduledRepair" class="form-control" />
                <span asp-validation-for="repairDto.ScheduledRepair" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="repairDto.RepairType" class="control-label"></label>
                <select asp-for="repairDto.RepairType" class="form-control">
                    @foreach (var type in Enum.GetValues(typeof(TechnicoWebApi.Models.RepairType)))
                    {
                        <option value="@type">@type</option>
                    }
                </select>
                <span asp-validation-for="repairDto.RepairType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="repairDto.Description" class="control-label"></label>
                <input asp-for="repairDto.Description" class="form-control" />
                <span asp-validation-for="repairDto.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="repairDto.Address" class="control-label"></label>
                <input asp-for="repairDto.Address" class="form-control" />
                <span asp-validation-for="repairDto.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="repairDto.RepairStatus" class="control-label"></label>
                <select asp-for="repairDto.RepairStatus" class="form-control">
                    @foreach (var status in Enum.GetValues(typeof(TechnicoWebApi.Models.RepairStatus)))
                    {
                        <option value="@status">@status</option>
                    }
                </select>
                <span asp-validation-for="repairDto.RepairStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="repairDto.Cost" class="control-label"></label>
                <input asp-for="repairDto.Cost" class="form-control" />
                <span asp-validation-for="repairDto.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Owner</label>
                <select name="ownerId" class="form-control">
                    <option value="">-- Select Owner --</option>
                    @foreach (var owner in Model.ownerList)
                    {
                        <option value="@owner.Id">@owner.Name @owner.Surname - @owner.Email</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="IndexRepairs">Back to List</a>
</div>

@section Scripts 
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

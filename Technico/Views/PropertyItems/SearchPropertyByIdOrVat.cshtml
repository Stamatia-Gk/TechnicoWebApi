@model IEnumerable<TechnicoWebApi.Dtos.PropertyDto>

<h2>Search Properties</h2>

<form asp-action="SearchPropertyByIdOrVat" method="post">
    <div>
        <label for="ownerId">Owner ID:</label>
        <input type="number" id="ownerId" name="OwnerId" class="form-control" />
    </div>
    <div>
        <label for="vatNumber">VAT Number:</label>
        <input type="text" id="vatNumber" name="VatNumber" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model != null && Model.Any())
{
<h2>Search Results</h2>
<table class="table">
    <thead>
    <tr>
        <th>Identification Number</th>
        <th>Address</th>
        <th>Construction Year</th>
        <th>Property Type</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var property in Model)
    {
    <tr>
        <td>@property.IdentificationNumber</td>
        <td>@property.Address</td>
        <td>@property.ConstructionYear</td>
        <td>@property.PropertyType</td>
    </tr>
    }
    </tbody>
</table>
}
else
{
<p>No properties found for the given criteria.</p>
}